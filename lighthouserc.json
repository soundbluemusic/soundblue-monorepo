{
  "ci": {
    "collect": {
      "startServerCommand": "cd apps/sound-blue && npx wrangler dev --config dist/server/wrangler.json --port 9411",
      "startServerReadyPattern": "Ready on",
      "startServerReadyTimeout": 30000,
      "url": [
        "http://localhost:9411/",
        "http://localhost:9411/about/",
        "http://localhost:9411/ko/"
      ],
      "numberOfRuns": 3,
      "settings": {
        "chromeFlags": "--no-sandbox --disable-gpu --disable-dev-shm-usage --disable-software-rasterizer"
      }
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.9 }],
        "categories:accessibility": ["error", { "minScore": 0.9 }],
        "categories:best-practices": ["error", { "minScore": 0.9 }],
        "categories:seo": ["error", { "minScore": 0.9 }],
        "first-contentful-paint": ["warn", { "maxNumericValue": 2000 }],
        "largest-contentful-paint": ["error", { "maxNumericValue": 2500 }],
        "cumulative-layout-shift": ["error", { "maxNumericValue": 0.1 }],
        "total-blocking-time": ["warn", { "maxNumericValue": 300 }]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
