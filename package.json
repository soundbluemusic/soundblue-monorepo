{
  "name": "soundblue-monorepo",
  "private": true,
  "packageManager": "pnpm@10.26.0",
  "scripts": {
    "dev:tools": "pnpm --filter tools dev",
    "dev:main": "pnpm --filter sound-blue dev",
    "dev:dialogue": "pnpm --filter dialogue dev",
    "build": "turbo run build",
    "test": "turbo run test:run",
    "test:coverage": "turbo run test:coverage",
    "test:e2e": "pnpm --filter sound-blue test:e2e && pnpm --filter tools test:e2e",
    "typecheck": "turbo run typecheck",
    "check": "pnpm exec biome check .",
    "check:fix": "pnpm exec biome check --write .",
    "check:circular": "pnpm -r exec skott --showCircularDependencies --displayMode=raw --fileExtensions=.ts,.tsx --ignorePattern='node_modules|.vinxi|.output|dist|rust' --exitCodeOnCircularDependencies=1",
    "check:versions": "pnpm exec syncpack list-mismatches",
    "check:size": "pnpm exec size-limit",
    "check:links": "pnpm exec blc ./apps/sound-blue/.output/public --recursive --exclude-external",
    "check:env": "pnpm exec dotenv-linter apps/*/.env* || true",
    "lighthouse": "pnpm exec lhci autorun",
    "validate": "pnpm typecheck && pnpm check && pnpm test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@biomejs/biome": "^2.3.9",
    "@inlang/paraglide-js": "^2.7.0",
    "@inlang/paraglide-vite": "^1.4.0",
    "@lhci/cli": "^0.15.1",
    "@size-limit/preset-app": "^12.0.0",
    "broken-link-checker": "^0.7.8",
    "dotenv-linter": "^0.2.0",
    "husky": "^9.1.7",
    "lighthouse": "^13.0.1",
    "lint-staged": "^16.2.7",
    "sharp": "^0.34.5",
    "size-limit": "^12.0.0",
    "skott": "^0.35.6",
    "syncpack": "^13.0.4",
    "turbo": "^2.6.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp"
    ]
  }
}
