{
  "name": "dialogue",
  "version": "0.1.0",
  "description": "A conversational learning tool that works 100% offline",
  "license": "UNLICENSED",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && pnpm exec tsx scripts/postbuild-seo.ts",
    "prebuild": "pnpm --filter @soundblue/ui-components build",
    "start": "node dist/server/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "test": "vitest",
    "test:run": "vitest run",
    "deploy": "pnpm build && wrangler deploy",
    "preview": "pnpm build && vite preview"
  },
  "dependencies": {
    "@formkit/auto-animate": "^0.9.0",
    "@soundblue/hangul": "workspace:*",
    "@soundblue/i18n": "workspace:*",
    "@soundblue/locale": "workspace:*",
    "@soundblue/nlu": "workspace:*",
    "@soundblue/pwa": "workspace:*",
    "@soundblue/seo": "workspace:*",
    "@soundblue/storage": "workspace:*",
    "@soundblue/ui-components": "workspace:*",
    "@tanstack/react-router": "^1.149.4",
    "@tanstack/react-start": "^1.149.4",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.28.1",
    "immer": "^11.1.3",
    "isbot": "^5.1.27",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@cloudflare/vite-plugin": "^1.21.0",
    "@cloudflare/workers-types": "^4.20260116.0",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/router-devtools": "^1.149.4",
    "@tanstack/router-plugin": "^1.149.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "jsdom": "^27.3.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.19.4",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "vite-tsconfig-paths": "^6.0.4",
    "vitest": "^4.0.17",
    "wrangler": "^4.59.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
