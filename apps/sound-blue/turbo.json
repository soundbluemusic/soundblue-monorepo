{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "public/**",
        "messages/**",
        "scripts/**",
        "app.config.ts",
        "tailwind.config.ts",
        "tsconfig.json",
        "package.json"
      ],
      "outputs": [".output/**", "build/**"],
      "cache": true,
      "env": ["NODE_ENV"]
    },
    "typecheck": {
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "tsconfig.json"],
      "outputs": [".tsbuildinfo"],
      "cache": true
    },
    "lint": {
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "biome.json"],
      "outputs": [],
      "cache": true
    },
    "check": {
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "biome.json"],
      "outputs": [],
      "cache": true
    },
    "test:run": {
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "vitest.config.ts"],
      "outputs": ["coverage/**"],
      "cache": true,
      "env": ["CI"]
    },
    "format": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
