{
  "name": "sound-blue",
  "private": true,
  "version": "3.0.18-베타",
  "type": "module",
  "description": "Sound Blue - Music Artist & Producer",
  "author": "SoundBlueMusic",
  "license": "UNLICENSED",
  "homepage": "https://soundbluemusic.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/soundbluemusic/sound-blue.git"
  },
  "bugs": {
    "url": "https://github.com/soundbluemusic/sound-blue/issues"
  },
  "keywords": [
    "solidjs",
    "solidstart",
    "typescript",
    "music",
    "artist",
    "soundbluemusic"
  ],
  "scripts": {
    "dev": "vinxi dev",
    "build": "vinxi build && node scripts/generate-sitemap.mjs",
    "build:analyze": "ANALYZE=true vinxi build",
    "start": "vinxi start",
    "pages:dev": "pnpm dlx wrangler pages dev .output/public",
    "pages:deploy": "pnpm build && pnpm dlx wrangler pages deploy .output/public",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:mutation": "stryker run",
    "validate": "pnpm typecheck && pnpm check && pnpm test:run",
    "optimize:images": "node scripts/optimize-images.mjs",
    "prepare": "husky",
    "clean": "rm -rf .output .vinxi .turbo .tsbuildinfo node_modules/.cache"
  },
  "dependencies": {
    "@soundblue/shared": "workspace:*",
    "@solid-primitives/i18n": "^2.2.1",
    "@solidjs/meta": "^0.29.4",
    "@solidjs/router": "^0.15.4",
    "@solidjs/start": "^1.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "solid-js": "^1.9.10",
    "tailwind-merge": "^3.4.0",
    "vinxi": "^0.5.9",
    "vite-plugin-pwa": "^1.2.0",
    "workbox-window": "^7.4.0",
    "zod": "^4.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@playwright/test": "^1.57.0",
    "@solidjs/testing-library": "^0.8.10",
    "@stryker-mutator/core": "^9.4.0",
    "@stryker-mutator/typescript-checker": "^9.4.0",
    "@stryker-mutator/vitest-runner": "^9.4.0",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.2",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "rollup-plugin-visualizer": "^6.0.5",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-solid": "^2.11.10",
    "vitest": "^4.0.15",
    "wrangler": "^4.54.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.25.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "@parcel/watcher"
    ],
    "ignoredBuiltDependencies": [
      "@swc/core",
      "workerd"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "browserslist": {
    "production": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 safari versions",
      "last 2 edge versions",
      "not dead"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
