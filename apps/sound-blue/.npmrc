# pnpm configuration for optimized builds
# https://pnpm.io/npmrc

# Use hard links instead of copies for faster installs
package-import-method=hardlink

# Enable store deduplication
dedupe-peer-dependents=true

# Hoist packages for better compatibility
shamefully-hoist=true
public-hoist-pattern[]=*

# Optimize resolution
prefer-frozen-lockfile=true
resolution-mode=highest

# Disable telemetry
ignore-scripts=false
auto-install-peers=true

# Enable side-effects caching for native modules
side-effects-cache=true
side-effects-cache-readonly=false

# Performance settings
fetch-retries=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000
