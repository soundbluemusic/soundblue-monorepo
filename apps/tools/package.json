{
  "name": "tools",
  "private": true,
  "version": "2.0.0-alpha",
  "type": "module",
  "description": "Pro-grade Web DAW, Rhythm Game & Creative Tools",
  "author": "Sound Blue Music",
  "license": "UNLICENSED",
  "homepage": "https://tools.soundbluemusic.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/soundbluemusic/soundblue-monorepo.git",
    "directory": "apps/tools"
  },
  "scripts": {
    "dev": "react-router dev",
    "build": "react-router build && tsx scripts/generate-sitemaps.ts && tsx scripts/postbuild-seo.ts",
    "prebuild": "pnpm --filter @soundblue/ui-components build && tsx scripts/copy-dictionaries.ts",
    "start": "npx serve build/client -s -L",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "validate": "pnpm typecheck && pnpm check",
    "ci": "pnpm typecheck && pnpm check && pnpm test:run",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "wasm:build": "cd rust && wasm-pack build --target web --out-dir ../app/engine/wasm/pkg",
    "images:optimize": "tsx scripts/optimize-images.ts",
    "clean": "rm -rf build .turbo node_modules/.cache",
    "analyze": "ANALYZE=true pnpm build"
  },
  "dependencies": {
    "@formkit/auto-animate": "^0.9.0",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slider": "^1.2.2",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.6",
    "@radix-ui/react-tooltip": "^1.1.6",
    "@react-router/cloudflare": "^7.12.0",
    "@soundblue/audio-engine": "workspace:*",
    "@soundblue/hangul": "workspace:*",
    "@soundblue/text-processor": "workspace:*",
    "@soundblue/i18n": "workspace:*",
    "@soundblue/locale": "workspace:*",
    "@soundblue/pwa": "workspace:*",
    "@soundblue/seo": "workspace:*",
    "@soundblue/storage": "workspace:*",
    "@soundblue/translator": "workspace:*",
    "@soundblue/ui-components": "workspace:*",
    "@soundblue/web-audio": "workspace:*",
    "@soundblue/worker": "workspace:*",
    "@tanstack/react-virtual": "^3.13.18",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dexie": "^4.2.1",
    "dictionary-en": "^4.0.0",
    "immer": "^11.1.3",
    "isbot": "^5.1.27",
    "lucide-react": "^0.468.0",
    "lz-string": "^1.5.0",
    "nspell": "^2.1.5",
    "qrcode": "^1.5.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.70.0",
    "react-router": "^7.12.0",
    "tailwind-merge": "^3.4.0",
    "tonal": "^6.4.2",
    "tone": "^15.1.22",
    "valibot": "^1.2.0",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@playwright/test": "^1.57.0",
    "@react-router/dev": "^7.12.0",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/lz-string": "^1.5.0",
    "@types/node": "^24.10.2",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.15",
    "jsdom": "^27.3.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.20.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.25.0"
}
