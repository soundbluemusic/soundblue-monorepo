{
  "name": "tools",
  "private": true,
  "version": "2.0.0-alpha",
  "type": "module",
  "description": "Pro-grade Web DAW, Rhythm Game & Creative Tools",
  "author": "Sound Blue Music",
  "license": "MIT",
  "homepage": "https://tools.soundbluemusic.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/soundbluemusic/soundblue-monorepo.git",
    "directory": "apps/tools"
  },
  "scripts": {
    "dev": "vinxi dev",
    "build": "vinxi build",
    "prebuild": "pnpm run generate:i18n-dict",
    "postbuild": "pnpm dlx tsx scripts/generate-sitemaps.ts",
    "generate:i18n-dict": "pnpm dlx tsx scripts/generate-i18n-dictionary.ts",
    "start": "vinxi start",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "validate": "pnpm typecheck && pnpm check",
    "ci": "pnpm typecheck && pnpm check && pnpm test:run",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "wasm:build": "cd rust && wasm-pack build --target web --out-dir ../src/engine/wasm/pkg",
    "images:optimize": "pnpm dlx tsx scripts/optimize-images.ts",
    "prepare": "husky",
    "clean": "rm -rf .vinxi .output dist node_modules/.cache",
    "analyze": "ANALYZE=true pnpm build"
  },
  "dependencies": {
    "@kobalte/core": "^0.13.11",
    "@solid-primitives/event-bus": "^1.1.2",
    "@solid-primitives/i18n": "^2.2.1",
    "@solid-primitives/media": "^2.3.3",
    "@solid-primitives/scheduled": "^1.5.2",
    "@solid-primitives/storage": "^4.3.3",
    "@solidjs/meta": "^0.29.4",
    "@solidjs/router": "^0.15.4",
    "@solidjs/start": "^1.2.0",
    "@soundblue/shared": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dexie": "^4.2.1",
    "lucide-solid": "^0.556.0",
    "lz-string": "^1.5.0",
    "qrcode": "^1.5.4",
    "solid-js": "^1.9.10",
    "tailwind-merge": "^3.4.0",
    "valibot": "^1.2.0",
    "vinxi": "^0.5.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/vite": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/lz-string": "^1.5.0",
    "@types/node": "^24.10.2",
    "@types/qrcode": "^1.5.6",
    "@vitest/coverage-v8": "^4.0.15",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "rollup-plugin-visualizer": "^6.0.5",
    "sharp": "^0.34.2",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite-plugin-pwa": "^1.2.0",
    "vite-plugin-solid": "^2.11.10",
    "vitest": "^4.0.15",
    "workbox-window": "^7.4.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.25.0",
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  }
}
