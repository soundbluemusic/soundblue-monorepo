{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "app/**",
        "public/**",
        "react-router.config.ts",
        "vite.config.ts",
        "tsconfig.json",
        "package.json"
      ],
      "outputs": ["build/**"],
      "cache": true
    },
    "typecheck": {
      "dependsOn": [],
      "outputs": [],
      "cache": true
    },
    "lint": {
      "dependsOn": [],
      "outputs": [],
      "cache": true
    },
    "check": {
      "dependsOn": [],
      "outputs": [],
      "cache": true
    },
    "test:run": {
      "dependsOn": [],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
