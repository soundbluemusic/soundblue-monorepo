{
  "name": "@soundblue/ui-components",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Unified UI components library (base, composite, icons)",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./base": {
      "types": "./dist/base/index.d.ts",
      "import": "./dist/base/index.js"
    },
    "./base/components": {
      "types": "./dist/base/components/index.d.ts",
      "import": "./dist/base/components/index.js"
    },
    "./base/providers": {
      "types": "./dist/base/providers/index.d.ts",
      "import": "./dist/base/providers/index.js"
    },
    "./base/hooks": {
      "types": "./dist/base/hooks/index.d.ts",
      "import": "./dist/base/hooks/index.js"
    },
    "./base/stores": {
      "types": "./dist/base/stores/index.d.ts",
      "import": "./dist/base/stores/index.js"
    },
    "./base/types": {
      "types": "./dist/base/types/index.d.ts",
      "import": "./dist/base/types/index.js"
    },
    "./base/utils": {
      "types": "./dist/base/utils/index.d.ts",
      "import": "./dist/base/utils/index.js"
    },
    "./composite": {
      "types": "./dist/composite/index.d.ts",
      "import": "./dist/composite/index.js"
    },
    "./composite/chat": {
      "types": "./dist/composite/chat/index.d.ts",
      "import": "./dist/composite/chat/index.js"
    },
    "./composite/tool": {
      "types": "./dist/composite/tool/index.d.ts",
      "import": "./dist/composite/tool/index.js"
    },
    "./composite/tool/qr-generator": {
      "types": "./dist/composite/tool/qr-generator/index.d.ts",
      "import": "./dist/composite/tool/qr-generator/index.js"
    },
    "./composite/tool/translator": {
      "types": "./dist/composite/tool/translator/index.d.ts",
      "import": "./dist/composite/tool/translator/index.js"
    },
    "./composite/audio": {
      "types": "./dist/composite/audio/index.d.ts",
      "import": "./dist/composite/audio/index.js"
    },
    "./icons": {
      "types": "./dist/icons/index.d.ts",
      "import": "./dist/icons/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "peerDependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.1.6",
    "@soundblue/hangul": "workspace:*",
    "@soundblue/translator": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.28.1",
    "lucide-react": "^0.562.0",
    "qrcode": "^1.5.4",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  }
