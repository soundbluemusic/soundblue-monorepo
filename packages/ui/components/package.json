{
  "name": "@soundblue/ui-components",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Unified UI components library (base, composite, icons)",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./base": {
      "types": "./src/base/index.ts",
      "import": "./src/base/index.ts"
    },
    "./base/components": {
      "types": "./src/base/components/index.ts",
      "import": "./src/base/components/index.ts"
    },
    "./base/providers": {
      "types": "./src/base/providers/index.ts",
      "import": "./src/base/providers/index.ts"
    },
    "./base/hooks": {
      "types": "./src/base/hooks/index.ts",
      "import": "./src/base/hooks/index.ts"
    },
    "./base/stores": {
      "types": "./src/base/stores/index.ts",
      "import": "./src/base/stores/index.ts"
    },
    "./base/types": {
      "types": "./src/base/types/index.ts",
      "import": "./src/base/types/index.ts"
