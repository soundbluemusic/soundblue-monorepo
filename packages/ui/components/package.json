      "types": "./src/composite/chat/index.ts",
      "import": "./src/composite/chat/index.ts"
    },
    "./composite/tool": {
      "types": "./src/composite/tool/index.ts",
      "import": "./src/composite/tool/index.ts"
    },
    "./composite/audio": {
      "types": "./src/composite/audio/index.ts",
